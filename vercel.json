{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "cd frontend && npm install",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-laravel-api.com/api/:path*"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "frontend": true,
      "api": false
    }
  }
}